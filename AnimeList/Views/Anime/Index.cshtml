@model AnimeList.Class.ViewItens.CadastroAnimeViewItem

@{
    ViewData["Title"] = "Lista de Animes";
    ViewBag.Title = "Index";
}

@if (Model.Message != null)
{
    <div class="alert @(Model.Message.isSucess ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
        @Model.Message.message
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="container">
    <div class="row">
        <h2>Manutenção de Animes</h2>
    </div>

    <div class="row">
        <span>@Html.ActionLink("Novo", "Edit", "Anime", new { id = 0 }, new { @class = "btn btn-success btn-xs" })</span>
    </div>

    <div class="row">
        <table class="table table-bordred table-striped">

            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Nome Romaji</th>
                    <th>-</th>
                    <th>-</th>
                    <th>-</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model.Animes)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NomeRomaji)
                    </td>
                    <td>
                        <p data-placement="top" data-toggle="tooltip" title="Assistir">
                            <span>@Html.ActionLink("Assistir", "Watch", "Anime", new { id = item.Id }, new { @class = "btn btn-warning btn-xs" })</span>
                        </p>
                    </td>
                    <td>
                        <p data-placement="top" data-toggle="tooltip" title="Editar">
                            <span>@Html.ActionLink("Editar", "Edit", "Anime", new { id = item.Id }, new { @class = "btn btn-primary btn-xs" })</span>
                        </p>
                    </td>
                    <td>
                        <p data-placement="top" data-toggle="tooltip" title="Deletar">
                            <span>@Html.ActionLink("Deletar", "Delete", "Anime", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })</span>
                        </p>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>