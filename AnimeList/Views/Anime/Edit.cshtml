@model AnimeList.Class.ViewItens.CadastroAnimeViewItem

@{
    ViewBag.Title = "Edit";
}

@{
    if (Model.AnimeCadastro.Id == 0)
    {
        <h2>Criar</h2>
    }
    else
    {
        <h2>Editar</h2>
    }
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Anime</h4>
    <hr />

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.AnimeCadastro.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.AnimeCadastro.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.AnimeCadastro.Nome, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AnimeCadastro.Nome, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.AnimeCadastro.NomeRomaji, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.AnimeCadastro.NomeRomaji, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AnimeCadastro.NomeRomaji, "", new { @class = "text-danger" })
        </div>
    </div>

    @{ if (Model.AnimeCadastro.Id == 0)
        {
            <div class="form-group">
                @Html.LabelFor(model => model.qtdEpisodios, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.qtdEpisodios, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.qtdEpisodios, "", new { @class = "text-danger" })
                </div>
            </div>
        }
    }

    <div class="form-group">
        @Html.LabelFor(model => model.AnimeCadastro.IdTemporada, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.AnimeCadastro.IdTemporada, Model.Temporadas, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AnimeCadastro.IdTemporada, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.AnimeCadastro.IdDiretor, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.AnimeCadastro.IdDiretor, Model.Diretores, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AnimeCadastro.IdDiretor, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.AnimeCadastro.IdEstudio, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.AnimeCadastro.IdEstudio, Model.Estudios, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AnimeCadastro.IdEstudio, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-success btn-xs">Salvar</button>
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Retornar a Listagem", "Index", "Anime")
</div>